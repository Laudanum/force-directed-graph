<!-- partials/main-video -->

<div class="content">
  <div class="post post{{record.category.nicename}}" id="post-{{record.id}}">
    <div class="storycontent">
      <video class="video-js vjs-fluid" controls autoplay preload="auto" poster="{{record.files.video.poster}}" data-setup="{}">
        <source src="{{record.files.video.src}}" type="{{record.files.video.type}}" />
        <p class="vjs-no-js">
          To view this video please enable JavaScript, and consider upgrading to a web browser that
          <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        </p>
      </video>
    </div>
  </div>
</div>

